<Window x:Class="WpfRuler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"  Width="22cm" Height="6cm">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" x:Name="Ruler" Margin="20"/>
        <Button Grid.Row="1" Content="Print" Margin="20" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
